@model OnlineShoppingSystem.Models.CustomerInformation

@{
    ViewBag.Title = "UpdateInformation";
    Layout = "~/Views/Shared/_mylayout.cshtml";
}

<div class="container" style="min-height:800px;">
    <div class="col-lg-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.CustID)
                <div class="form-group">
                    <b class="control-label col-md-2">Address</b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Address1, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Address1, "", new { @class = "text-danger" })
                    </div>
                </div>
                 <div class="form-group">
                    <b class="control-label col-md-2">Country</b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
                    </div>
                </div>
                 <div class="form-group">
                    <b class="control-label col-md-2">Phone Number</b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                    </div>
                </div>
                <input type="submit" value="Update" class="btn btn-success center-block" />
            </div>
        }
    </div>
</div>

