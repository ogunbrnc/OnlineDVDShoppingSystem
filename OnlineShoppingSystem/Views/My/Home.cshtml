@model OnlineShoppingSystem.Models.ModelProducts
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_mylayout.cshtml";
    
    <style>
      
        h1 {
            font-family: 'Lora', serif;
            font-size: 50px;
        }

        .price {
            font-family: 'Bitter', serif;
            font-weight: 400;
        }

        .discountedprice {
            font-family: 'Bitter', serif;
            font-weight: 700;
        }
        .checked {
            color: orange;
        }

        .fa-star {
            font-size: 20px;
        }
        .discountedrate {
            color: #6E7DA5;
            font-weight: 700;
            font-family: 'Bitter', serif;
        }
    </style>
}
<div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" style="margin-bottom:80px">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Images/Carousel1.jpeg" alt="Carousel1.jpg" class="img-rounded center-block" style="width:100%;max-height:450px;">
            </div>
            <div class="item">
                <img src="~/Images/Carousel2.jpeg" alt="Carousel2.jpg" class="img-rounded" style="width:100%;max-height:450px;">
            </div>

            <div class="item">
                <img src="~/Images/Carousel3.jpeg" alt="Carousel3.jpg" class="img-rounded center-block" style="width:100%;max-height:450px;">
            </div>
        </div>
        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="col-lg-20" style="margin-bottom:80px;">
        <h1>New Products </h1>
        @foreach (var item in Model.modelNewProducts)
        {
            int i;
            <div style="display:inline-block;padding:13px;">
                <div><img class="img-rounded img-responsive" src="~/Images/@item.ProductImagePath" style="height:200px;width:195px;" /></div>
                <div class="text-center price"><p>Price:<del>@item.ProductPrice$</del></div>
                 <div class="text-center discountedrate"><p>%@item.ProductDiscountedRate</p></div>
                <div class="text-center discountedprice"><p>Discounted Price:@item.ProductDiscountedPrice$</p></div>
                <div class="text-center" style="margin-bottom:10px;">
                    <label>@item.ProductStar</label>
                    @for (i = 1; i <= item.ProductStar; i++)
                    {
                        <span class="fa fa-star checked"></span>
                    }
                    @if (item.ProductStar - (int)item.ProductStar != 0)
                    {
                        <span class="fa fa-star-half-o" style="color:orange;"></span>
                        i++;
                    }
                    @for (; i <= 5; i++)
                    {
                        <span class="fa fa-star"></span>
                    }
                    <label>(@item.ProductNumberOfEvaluate)</label>

                </div>
                <div class="text-center"> @Html.ActionLink("See Detail", "ProductDetails", "Product", new { PID = item.ProductID, PName = item.ProductName }, new { @class = "btn btn-success cart-btn-transform m-3", style = "font-size:18px;font-family: 'Bitter', serif;" })</div>
            </div>
        }
    </div>
