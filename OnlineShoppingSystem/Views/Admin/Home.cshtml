@model OnlineShoppingSystem.Models.ModelAdmin
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_myAdminLayout.cshtml";
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@1,500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Bitter:ital,wght@1,400;1,700&display=swap" rel="stylesheet">    
    <style>
        h1 {
            font-family: 'Lora', serif;
            font-size: 50px;
        }
        .price {
            font-family: 'Bitter', serif;
            font-weight: 400;
        }

        .discountedprice {
            font-family: 'Bitter', serif;
            font-weight: 700;
        }
    </style>
}
<body>
    <div class="container" style="min-height:650px;">
        <div class="col-lg-16" style="margin-bottom:80px;">
            <div class="col-lg-12">
                <h1 style="margin-bottom:40px;">Products With Low Stock</h1>
                <table class="table table-bordered table-responsive">
                    <tr class="text-center">
                        <td class="col-lg-1">Product Image</td>
                        <td class="col-lg-1">Product ID</td>
                        <td class="col-lg-1">Product Name</td>
                        <td class="col-lg-1">Product Price</td>
                        <td class="col-lg-1">Discounted Price</td>
                        <td class="col-lg-1">Product Stock</td>
                        <td class="col-lg-1">Number Of Sales</td>
                        <td class="col-lg-1">Detail</td>

                    </tr>
                    @foreach (var item in Model.listlowerProducts)
                    {
                        <tr class="text-center">
                            <td><img class="img-rounded img-responsive center-block" src="~/Images/@item.ProductImagePath" style="max-height:90px;max-width:70px;" /></td>
                            <td>@item.ProductID</td>
                            <td>@item.ProductName</td>
                            <td class="price"><del>@item.ProductPrice</del></td>
                            <td class="discountedprice">@item.ProductDiscountedPrice</td>
                            <td>@item.ProductStock</td>
                            <td>@item.ProductNumberOfSales</td>
                            <td>
                                @using (Html.BeginForm("ProductDetail", "Admin", new { PID = item.ProductID, PName = item.ProductName }, FormMethod.Post))
                                {
                                    <button class="btn btn-success cart-btn-transform m-3" style="font-size:18px;font-family: 'Bitter', serif;">Details</button>
                                }
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
        <div class="col-lg-16" style="margin-bottom:80px;">
            <div class="col-lg-12">
                <h1 style="margin-bottom:40px;">Products With Best Selling</h1>
                <table class="table table-bordered table-responsive">
                    <tr class="text-center">
                        <td class="col-lg-1">Product Image</td>
                        <td class="col-lg-1">Product ID</td>
                        <td class="col-lg-1">Product Name</td>
                        <td class="col-lg-1">Product Price</td>
                        <td class="col-lg-1">Discounted Price</td>
                        <td class="col-lg-1">Product Stock</td>
                        <td class="col-lg-1">Number Of Sales</td>
                        <td class="col-lg-1">Detail</td>

                    </tr>
                    @foreach (var item in Model.listBestSellingProduct)
                    {
                        <tr class="text-center">
                            <td class="img-responsive center-block"><img class="img-rounded img-responsive" src="~/Images/@item.ProductImagePath" style="max-height:90px;max-width:70px;" /></td>
                            <td>@item.ProductID</td>
                            <td>@item.ProductName</td>
                            <td class=price><del>@item.ProductPrice</del></td>
                            <td class="discountedprice">@item.ProductDiscountedPrice</td>
                            <td>@item.ProductStock</td>
                            <td>@item.ProductNumberOfSales</td>
                            <td>
                                @using (Html.BeginForm("ProductDetail", "Admin", new { PID = item.ProductID, PName = item.ProductName }, FormMethod.Post))
                                {
                                    <button class="btn btn-success cart-btn-transform m-3" style="font-size:18px;font-family: 'Bitter', serif;">Details</button>
                                }
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
        <div class="col-lg-16" style="margin-bottom:80px;">
            <div class="col-lg-12">
                <h1 style="margin-bottom:40px;">Products With Least Selling</h1>
                <table class="table table-bordered table-responsive">
                    <tr class="text-center">
                        <td class="col-lg-1">Product Image</td>
                        <td class="col-lg-1">Product ID</td>
                        <td class="col-lg-1">Product Name</td>
                        <td class="col-lg-1">Product Price</td>
                        <td class="col-lg-1">Discounted Price</td>
                        <td class="col-lg-1">Product Stock</td>
                        <td class="col-lg-1">Number Of Sales</td>
                        <td class="col-lg-1">Detail</td>

                    </tr>
                    @foreach (var item in Model.listLeastSellingProduct)
                    {
                        <tr class="text-center">
                            <td><img class="img-rounded img-responsive center-block" src="~/Images/@item.ProductImagePath" style="max-height:90px;max-width:70px;" /></td>
                            <td>@item.ProductID</td>
                            <td>@item.ProductName</td>
                            <td class="price"><del>@item.ProductPrice</del></td>
                            <td class="discountedprice">@item.ProductDiscountedPrice</td>
                            <td>@item.ProductStock</td>
                            <td>@item.ProductNumberOfSales</td>
                            <td>
                                @using (Html.BeginForm("ProductDetail", "Admin", new { PID = item.ProductID, PName = item.ProductName }, FormMethod.Post))
                                {
                                    <button class="btn btn-success cart-btn-transform m-3" style="font-size:18px;font-family: 'Bitter', serif;">Details</button>
                                }
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>     
    </div>
</body>
