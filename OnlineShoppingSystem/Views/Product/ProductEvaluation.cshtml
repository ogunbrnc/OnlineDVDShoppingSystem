@model OnlineShoppingSystem.Models.ModelProductComments
@{
    ViewBag.Title = "ProductEvaluation";
    Layout = "~/Views/Shared/_mylayout.cshtml";
}

<div class="container" style="min-height:800px;">
    <div class="col-lg-12">
        <img class="img-responsive center-block" src="~/Images/@Model.product.ProductImagePath" style="min-height:400px;min-width:400px;" />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.product.ProductID)
            <div class="form-horizontal">
                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <b class="control-label col-md-2">Your Comment</b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.productComment.Comment, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.productComment.Comment, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <b class="control-label col-md-2">Product Star</b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.productComment.ProductStar, new { htmlAttributes = new { @class = "form-control", min = 0, max = 5 } })
                        @Html.ValidationMessageFor(model => model.productComment.ProductStar, "", new { @class = "text-danger" })
                    </div>
                </div>
                <input type="submit" value="Evaluate" class="btn btn-success center-block" />
            </div>
        }
    </div>
</div>
